<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
    <add assembly="Microsoft.ApplicationInsights.NLogTarget" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <target name="file" xsi:type="File"
              archiveEvery="Day"
              fileName="/app/logs/calculatorservice.api.log"
              archiveFileName="/app/logs/calculatorservice.api.{#####}.log"
              archiveAboveSize="10485760"
              maxArchiveFiles="100"
              archiveNumbering="DateAndSequence"
              keepFileOpen="true"
              layout="[${longdate}] [${level}] [${callsite:cleanNamesOfAsyncContinuations=true}] [${message}] [${exception:exception:format=data:exceptionDataSeparator=\r\n}]" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>